@using TPFeuilleDeTemps_JeanGirard.Models.ViewModels
@model TPFeuilleDeTemps_JeanGirard.Models.ViewModels.PayViewModel

@{
    ViewData["Title"] = "Pay";
}


<div class="row  d-flex justify-content-center">
    <div class="col-lg-4">
        <h1>Pay</h1>

        <h4>
            Informations for
        </h4>
        <hr/>

        <form asp-action="RequestForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Users" class="control-label"></label>
                <select asp-for="SelectedUser"
                        asp-items="@(Model.Users)" class="custom-select" required>
                </select>
                <span asp-validation-for="SelectedUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDateTime" class="control-label"></label>
                <input asp-for="StartDateTime" max="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" min="@DateTime.Now.AddYears(-1).ToString("yyyy-MM-ddThh:mm")" class="form-control" required/>
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateTime" class="control-label"></label>
                <input asp-for="EndDateTime" max="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" min="@DateTime.Now.AddYears(-1).ToString("yyyy-MM-ddThh:mm")" class="form-control" required/>
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" name="submitButton" value="Submit Sequential" class="btn btn-primary"/>
            </div>
            <div class="form-group">
                <input type="submit" name="submitButton" value="Submit Parallel" class="btn btn-primary"/>
            </div>
        </form>
        @if (TempData["UserMessage"] != null)
        {
            ValidationMessageForView message = (ValidationMessageForView)TempData["UserMessage"];
            <div class="alert @message.CssClassName">
                <strong>@message.Title</strong>
                @message.Message
            </div>
        }
    </div>

</div>

@section scripts{
    <partial name="_ValidationScriptsPartial"/>
}