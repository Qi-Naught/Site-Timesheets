@using TPFeuilleDeTemps_JeanGirard.Models.ViewModels
@model TPFeuilleDeTemps_JeanGirard.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="row d-flex justify-content-center">
    <div class="col-lg-4">
        <h1>Login</h1>

        <hr/>
        <form asp-action="ValidateLogin" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <br/>
                <input asp-for="Email" class="form-control" value="@Model.Email" placeholder="Email" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pwd" class="control-label"></label>
                <br/>
                <input asp-for="Pwd" type="password" class="form-control" placeholder="Password" required/>
                <span asp-validation-for="Pwd" class="text-danger"></span>
            </div>
            <div class="form-check pb-3">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                <label class="form-check-label">Remember Me</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary"/>
            </div>
        </form>
        @if (TempData["UserMessage"] != null)
        {
            ValidationMessageForView message = (ValidationMessageForView)TempData["UserMessage"];
            <div class="alert @message.CssClassName">
                <strong>@message.Title</strong>
                @message.Message
            </div>
        }
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial"/>
}